<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anbertrand1.myapplication">

    <uses-feature android:name="android.hardware.sensor.accelerometer"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_slash"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".view.FenetreMenu">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <activity android:name=".view.FenetreRegle">
            <intent-filter>
                <category android:name="android.intent.category.OPENABLE"/>
                <action android:name="android.intent.action.CALL_BUTTON"/>
            </intent-filter>
        </activity>

        <activity android:name=".view.FenetreGame" android:screenOrientation="landscape" >
            <intent-filter>
                <category android:name="android.intent.category.OPENABLE"/>
                <action android:name="android.intent.action.CALL_BUTTON"/>
            </intent-filter>
        </activity>




    </application>

</manifest>